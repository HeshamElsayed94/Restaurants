{
	"ConnectionStrings": {
		"RestaurantsDb": "server=.;initial catalog=RestaurantnsDb;trustServerCertificate=true; integrated security=true",
		"Redis": "localhost:6379"
	},
	"Serilog": {
		"MinimumLevel": {
			"Override": {
				"Microsoft": "Warning",
				"Microsoft.EntityFrameworkCore": "Information"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "[{Timestamp:dd-MM-yyyy HH:mm:ss} {Level:u3}] |{SourceContext}| {NewLine}{Message:lj}{NewLine}{Exception}"
				}
			},
			{
				"Name": "File",
				"Args": {
					"path": "logs/Restaurants-API-.log",
					"rollingInterval": "Day",
					"rollOnFileSizeLimit": true,
					"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
				}
			}
		]
	},
	"AllowedHosts": "*"
}